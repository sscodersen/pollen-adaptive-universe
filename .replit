modules = ["nodejs-20", "python-3.11", "web"]

[nix]
channel = "stable-25_05"
packages = ["glibcLocales", "libxcrypt"]

[deployment]
deploymentTarget = "autoscale"
run = ["node", "start.cjs"]
build = ["npm", "run", "build"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Pollen AI Platform"

[[workflows.workflow]]
name = "Pollen AI Platform"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "node start.cjs"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

